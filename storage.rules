rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images for menu items
    match /menu-images/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if true; // For demo purposes - in production, add proper authentication
    }
    
    // User uploaded images
    match /user-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin uploaded images
    match /admin-images/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if true; // For demo purposes - in production, add admin authentication
    }
  }
}
