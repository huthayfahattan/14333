rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Orders collection - allow read/write for authenticated users
    match /orders/{orderId} {
      allow read, write: if true; // For demo purposes - in production, add proper authentication
    }
    
    // Restaurant menu collection
    match /restaurant/{document} {
      allow read: if true; // Public read access for menu
      allow write: if true; // For demo purposes - in production, add admin authentication
    }
    
    // User preferences
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin settings
    match /admin/{document} {
      allow read: if true; // Public read access
      allow write: if true; // For demo purposes - in production, add admin authentication
    }
  }
}
